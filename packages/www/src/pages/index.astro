---
import Line from "../components/Line.astro";
import Layout from "../layouts/Layout.astro";

const content = `
# Use the command below to start organizing:
ssh cli.todoplanner.app [glow,active]
`;
---

<Layout title="TodoPlanner.app">
  <main class="bg-black w-full h-full">
    <!-- Main Content -->
    <div class="w-full h-full">
      <!-- Spacer -->
      <div class="h-20 md:h-40 border-b border-zinc-800"></div>

      <!-- Lines Container-->
      <div class="flex flex-col" role="main">
        <Line content={content} />
      </div>
    </div>
  </main>
</Layout>
