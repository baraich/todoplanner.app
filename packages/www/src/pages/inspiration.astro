---
import Layout from "../layouts/Layout.astro";
import Line from "../components/Line.astro";

const content = `
# Inspiration

# todoplanner.app's terminal interface is inspired by terminal.shop - [glow]
# an amazingly awesome project created by @thdxr, @adamdotdev, [glow]
# @theprimeagen, @teej_dv, and @iamdavidhill at Terminal Products, Inc. [glow]

# We're grateful for their innovative design that inspired our work.

# Visit the original project:
https://terminal.shop [glow]
`;
---

<Layout title="TodoPlanner.app">
  <main class="bg-black w-full h-full">
    <!-- Main Content -->
    <div class="w-full h-full">
      <!-- Spacer -->
      <div class="h-40 border-b border-zinc-800"></div>

      <!-- Lines Container-->
      <div class="flex flex-col">
        <Line content={content} />
      </div>
    </div>
  </main>
</Layout>
