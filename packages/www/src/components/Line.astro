---
interface Props {
  text: string;
  idx: number;
  fontStyle?: string;
}

const { text, fontStyle, idx } = Astro.props;
---

<div
  class="grid grid-cols-[auto_1fr] border-b border-zinc-800 hover:bg-zinc-900 h-auto"
>
  <!-- Line Number -->
  <div class="text-zinc-400 p-4 px-8">{idx + 1}</div>

  <!-- Line Text -->
  <div
    class={`${fontStyle == "bold" ? "text-zinc-200" : "text-zinc-400"} h-full flex items-center`}
  >
    {text}
  </div>
</div>
