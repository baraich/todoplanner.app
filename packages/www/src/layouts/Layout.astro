---
import "../styles/global.css";
import "@fontsource/ibm-plex-mono";
import SEO from "../components/SEO.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} />
  </head>
  <body class="w-screen bg-black h-screen overflow-y-auto hide-scrollbar">
    <!-- Sticky Header for Navigation -->
    <nav
      class="bg-zinc-900 h-10 md:h-20 w-full flex border-stone-700 border-b sticky top-0 z-50"
    >
      <a href="/" class="nav-link">
        <div
          class="h-full w-max px-4 md:px-12 border-r border-stone-700 grid place-items-center"
        >
          <span class="text-white font-medium text-2xl md:text-3xl"
            >terminal</span
          >
        </div>
      </a>
      <a href="/inspiration" class="nav-link">
        <div
          class="h-full w-max px-4 md:px-12 border-r border-stone-700 grid place-items-center"
        >
          <span class="text-white font-medium text-2xl md:text-3xl"
            >inspiration</span
          >
        </div>
      </a>
    </nav>

    <slot />

    <!-- Hidden SEO Content -->
    <div class="sr-only">
      <h1>TodoPlanner.app - Terminal-style Todo Management</h1>
      <h2>Features</h2>
      <ul>
        <li>SSH-based access for a true terminal experience</li>
        <li>Familiar command-line interface</li>
        <li>Secure and efficient task management</li>
        <li>Perfect for developers and terminal enthusiasts</li>
        <li>Cross-platform compatibility</li>
      </ul>

      <h2>How It Works</h2>
      <p>
        TodoPlanner.app brings the power of terminal-based workflows to task
        management. Simply SSH into todoplanner.app to access your tasks using
        familiar command-line syntax. Organize, track, and complete tasks with
        the efficiency of terminal commands.
      </p>

      <h2>Why Choose TodoPlanner.app</h2>
      <ul>
        <li>Streamlined developer-friendly interface</li>
        <li>No context switching from your terminal</li>
        <li>Fast and responsive experience</li>
        <li>Keyboard-driven workflow</li>
        <li>Minimal and distraction-free design</li>
      </ul>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* Hide scrollbar for WebKit-based browsers */
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge, and Firefox */
  .hide-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
